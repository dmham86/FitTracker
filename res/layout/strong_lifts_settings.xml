<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".StrongLiftsSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal" >"

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".333333"
            android:text="@string/col_name"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".333333"
            android:text="@string/col_start"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_increase"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".333333"
            android:text="@string/col_increase"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_squat"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".333333"
            android:text="@string/sl_squat" />

        <EditText
            android:id="@+id/et_start_squat"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:inputType="number"
            android:text="45" />
        
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:text="@string/weight_unit" />

        <EditText
            android:id="@+id/et_increase_squat"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".1666666"
            android:inputType="number"
            android:text="5" />
        
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:text="@string/weight_unit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_bench"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".333333"
            android:text="@string/sl_bench" />

        <EditText
            android:id="@+id/et_start_bench"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:inputType="number"
            android:text="45" />
        
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:text="@string/weight_unit" />

        <EditText
            android:id="@+id/et_increase_bench"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:inputType="number"
            android:text="5" />
        
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:text="@string/weight_unit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_row"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".333333"
            android:text="@string/sl_row" />

        <EditText
            android:id="@+id/et_start_row"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:inputType="number"
            android:text="45" />
        
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:text="@string/weight_unit" />

        <EditText
            android:id="@+id/et_increase_row"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:inputType="number"
            android:text="5" />
        
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:text="@string/weight_unit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_ohp"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".333333"
            android:text="@string/sl_ohp" />

        <EditText
            android:id="@+id/et_start_ohp"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:inputType="number"
            android:text="45" />
        
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:text="@string/weight_unit" />

        <EditText
            android:id="@+id/et_increase_ohp"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:inputType="number"
            android:text="5" />
        
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:text="@string/weight_unit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_dl"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".333333"
            android:text="@string/sl_dl" />

        <EditText
            android:id="@+id/et_start_dl"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:inputType="number"
            android:text="45" />
        
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:text="@string/weight_unit" />

        <EditText
            android:id="@+id/et_increase_dl"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:inputType="number"
            android:text="10" />
        
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".166666"
            android:text="@string/weight_unit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnOk"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center_vertical|center_horizontal"
            android:text="Ok" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center_vertical|center_horizontal"
            android:text="Cancel" />

    </LinearLayout>

 </LinearLayout>